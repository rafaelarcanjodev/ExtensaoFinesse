{
  "manifest_version": 3,
  "name": "Extensão de Alarme",
  "version": "1.0",
  "description": "Extensão de alerta de telefonia finesse para agentes Totvs",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "audio/alarm.mp3"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "resources": [
        "fontawesome/css/all.min.css",
        "fontawesome/webfonts/*"
      ],
      "matches": [
        "https://sncfinesse1.totvs.com.br/*",
        "https://sncfinesse2.totvs.com.br/*"
      ],
      "js": [
        "popup.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  }
}